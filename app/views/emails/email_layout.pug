doctype html
html
  head
    title= title
    meta(name='viewport' content ='width=device-width, initial-scale=1, user-scalable=no')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content ='IE=edge')
    style(type="text/css").
        html, body{
            margin:0;
            padding:0;
            width:100%;
            height:100%;
            background:#F0F0F0;
        }
        table, tr, td{
            padding:0;
            margin:0;
        }
        .container{
            text-align:center;
            background:#FFFFFF;
        }
        .logo{
            margin:10px;
        }
        .row{
            max-width:600px;
            width:100%;
            margin:0;
            padding:0;
            text-align:left;
            display:block;
            margin:0 auto;
        }
        .col{
            float:left;
            padding:10px;
        }
        .col-fifty{
            width:50%;
        }
        .col-forty{
            width:25%;
        }
        .col-thirty{
            width:33%;
        }
        .col-thirty:last-child{
            width:34%;
        }
        .avatar{
            margin-left:20px;
        }
        .social_links{
            padding:20px;
        }
        h1{
            font-size:24px;
            padding:20px;
            padding-bottom:0px;
        }
        h2{
            font-size:20px;
            padding-left:20px;
        }
        p{
            font-size:17px; 
            line-height:23px; 
            color:#818181;
            text-align:left;
            padding-left:20px;
        }
        .btn{
            padding:10px; 
            padding-left:20px; 
            padding-right:20px; 
            background-color:#d51419; 
            color:#FFFFFF; 
            text-decoration:none;
        }
        .cta{
            margin-left:20px;
            margin-bottom:20px;
            font-size:23px;
        }
        @media screen and (max-width:420px) {
            .col{
                width:100%;
            }
        }
  body
    table(width="100%" cellspacing="0" cellpadding="0" style="background:#F0F0F0")
        tr
            td(width="100%" cellspacing="0" cellpadding="10" style="mapadding:10px; text-align:center;")
                table.row
                    tr
                        td
                            img.logo(src=app.locals.settings.host+"/images/assets/logo_brand.svg" height="60" alt="logo "+app.locals.settings.label)
    table.container(width="100%" cellspacing="0" cellpadding="0")
        tr
            td
                block email_content
    include email_footer
