extends email_layout

block email_content
    table.row(width="100%" cellpadding="0" cellspacing="0" style="max-width:600px;")
        tr
            td(style="font-size:20px;" cellpadding="0" cellspacing="0")
                h1= title
    table.row(width="100%" cellpadding="0" cellspacing="0" style="max-width:600px;")
        tr
            td(style="font-size:15px; line-height:20px; color:#818181;") 
                p !{message}
    if typeof buttons !== "undefined"
      table.row(width="100%" cellpadding="0" cellspacing="0" style="max-width:600px;")
        each button in buttons
          tr
            td(style="height:60px;")
                  a.cta.btn(href=button.url title=button.title style="")= button.title
