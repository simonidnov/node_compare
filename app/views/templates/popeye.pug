block popeye
    link(rel='stylesheet', href=app.locals.settings.host+'/public/stylesheets/components/popeye.min.css')
    div#popeye.popeye(class=query.type)
        if(query.type === "modal")
            div.modal(class=typeof query.className !== "undefined" ? query.className : '')
                div.popeye_content
                    div.cross_button
                        div.icon.idkids-icons.icon-cross
                          img(src="https://www.idkids-app.com/public/images/assets/cross.svg")
                    if(query.illus)
                        div.popeye_header
                            div.illus(style="background-image:url("+query.illus.src+"); background-color:"+query.illus.color+";")
                    if(query.motion)
                        div.popeye_header
                            iframe.illus(src=query.motion.src, style="background-color:"+query.motion.color+";")
                            //-div.illus(style="background-image:url("+query.illus+"); background-color:"+query.color+";")
                    if(query.message)
                        div.popeye_title= query.title
                    if(query.message)
                        div.popeye_message !{query.message}
                    if(query.buttons)
                        div.popeye_buttons
                            each button in query.buttons
                                a.cta.btn.btn-ld(class= " "+button.class, data-buttonid=button.value, href=button.href, target=button.target)= button.label
                    if(query.options)
                        ul.popeye_options
                            each option in query.options
                                li(data-optionid=option.value)= option.label
        if(query.type === "toast")
            div.toast(class=typeof query.className !== "undefined" ? query.className : '')
                div.popeye_content
                    div.cross_button
                        div.icon.idkids-icons.icon-cross
                          img(src="https://www.idkids-app.com/public/images/assets/cross.svg")
                    if(query.title)
                        div.popeye_title= query.title
                    else
                        br
                    if(query.message)
                        div.popeye_message !{query.message}
                    if(query.options)
                        ul.popeye_options
                            each option in query.options
                                li(data-optionid=option.value)= option.label
