div.coupon_code_form#coupon_code_form
  form
    input.form-control.coupon_code_input#coupon_code(type="text", placeholder="Entrez votre code ici")
    button.btn_coupon_code#submit_code(disabled) &#10008;
  div.coupon_datas
  style.
    .coupon_code_form{
      width:320px;
      max-width: 100%;
      left:0;
      right:0;
      margin:auto;
      text-align: center;
      background-color: #FFF;
      padding:10px;
      border-radius: 5px;
      -webkit-box-shadow: 0px 3px 10px 0px rgba(0,0,0,0.1);
      -moz-box-shadow: 0px 3px 10px 0px rgba(0,0,0,0.1);
      box-shadow: 0px 3px 10px 0px rgba(0,0,0,0.1);
      filter:progid:DXImageTransform.Microsoft.Shadow(color=#656565, Direction=180, Strength=25);
    }
    .coupon_code_form form{
      width: 100%;
      position: relative;
      left:0;
      right:0;
      margin:auto;
      display: inline-flex;
    }
    .coupon_code_form input[type="text"]{
      font-size: 24px;
      width:100%;
      padding:10px;
      float: left;
      height:50px;
      border:1px solid #E3E3E3;
      box-sizing: border-box;
    }
    .coupon_code_form button{
      position: absolute;
      top:0;
      right:0;
      width:50px;
      height:50px;
      background-color:lightseagreen;
      border:none;
      font-size: 30px;
      color:#FFF;
    }
    .coupon_code_form button:disabled{
      background-color:#E3E3E3;
    }
    .coupon_code_form button.error{
      background-color:coral;
    }
    /* SET PLACEHOLDER FOR ALL INPUTS TYPE */
    .coupon_code_form ::-webkit-input-placeholder{
       font-size: 17px;
    }
    .coupon_code_form :-moz-placeholder{
       font-size: 17px;
    }
    .coupon_code_form ::-moz-placeholder{
       font-size: 17px;
    }
    .coupon_code_form :-ms-input-placeholder{
       font-size: 17px;
    }
    .coupon_code_form ::-ms-input-placeholder{
       font-size: 17px;
    }
    .coupon_code_form ::placeholder {
       font-size: 17px;
    }
    .coupon_datas{
      text-align: left;
    }
    .coupon_datas .message{
    font-size: 17px;
    padding-top:10px;
    padding-bottom:10px;
    }
    .coupon_datas ul{
      margin:0;
      padding:0;
    }
    .coupon_datas ul li{
      margin:0;
      padding:0;
      list-style: none;
      font-size: 14px;
      padding-bottom: 10px;
    }
