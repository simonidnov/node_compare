extends admin_header
block content
    div.admin.users
        div.shutter
            h3= app.locals.admin_lang[locale].keys['USERS_FILTERS_TITLE']
            div.formular.fullscreen#users_filter
                form
                    div.form-group
                        input#male.form-control(type='checkbox', name='male')
                        label(for="male")= app.locals.admin_lang[locale].keys['USERS_FILTERS_MALE']
                    div.form-group
                        input#female.form-control(type='checkbox', name='female')
                        label(for="female")= app.locals.admin_lang[locale].keys['USERS_FILTERS_FEMALE']
                    div.form-group
                        input#is_newsletter.form-control(type='checkbox', name='is_newsletter')
                        label(for="is_newsletter")= app.locals.admin_lang[locale].keys['USERS_FILTERS_HAS_NEWSLETTER']
                    div.form-group.checkbox_relative_container(data-checkboxrelative="is_newsletter")
                        div.checkbox_relative
                            div.line
                                input#newsletter_okaidi.form-control(type='checkbox', name='newsletter_okaidi', checked='true')
                                label(for="newsletter_okaidi") !{lang[locale].keys.accept_newsletter_okaidi}
                            div.line
                                input#newsletter_obaibi.form-control(type='checkbox', name='newsletter_obaibi', checked='true')
                                label(for="newsletter_obaibi") !{lang[locale].keys.accept_newsletter_obaibi}
                            div.line
                                input#newsletter_jacadi.form-control(type='checkbox', name='newsletter_jacadi', checked='true')
                                label(for="newsletter_jacadi") !{lang[locale].keys.accept_newsletter_jacadi}
                            div.line
                                input#newsletter_oxybul.form-control(type='checkbox', name='newsletter_oxybul', checked='true')
                                label(for="newsletter_oxybul") !{lang[locale].keys.accept_newsletter_oxybul}
                            div.line
                                input#newsletter_rclv.form-control(type='checkbox', name='newsletter_rclv', checked='true')
                                label(for="newsletter_rclv") !{lang[locale].keys.accept_newsletter_rclv}
                            div.line
                                input#newsletter_njoy.form-control(type='checkbox', name='newsletter_njoy', checked='true')
                                label(for="newsletter_njoy") !{lang[locale].keys.accept_newsletter_njoy}
                            div.line
                                input#newsletter_bubble.form-control(type='checkbox', name='newsletter_bubble', checked='true')
                                label(for="newsletter_bubble") !{lang[locale].keys.accept_newsletter_bubble}
                            div.line
                                input#newsletter_joyvox.form-control(type='checkbox', name='newsletter_joyvox', checked='true')
                                label(for="newsletter_joyvox") !{lang[locale].keys.accept_newsletter_joyvox}
                    div.form-group
                        input#app_user.form-control(type='checkbox', name='app_user')
                        label(for="app_user")= app.locals.admin_lang[locale].keys['USERS_FILTERS_HAS_APPS']
                    div.form-group.checkbox_relative_container(data-checkboxrelative="app_user")
                        div.checkbox_relative
                            div.line
                                input#app_user_okaidi.form-control(type='checkbox', name='app_user_okaidi', checked='true')
                                label(for="app_user_okaidi") Okaidi
                    div.form-group
                        input#has_kids.form-control(type='checkbox', name='has_kids')
                        label(for="has_kids")= app.locals.admin_lang[locale].keys['USERS_FILTERS_HAS_KIDS']
                    div.form-group.checkbox_relative_container(data-checkboxrelative="has_kids")
                        div.checkbox_relative
                            div.form-group
                                input#kid_male.form-control(type='checkbox', name='kid_male')
                                label(for="kid_male") Au moins un garçon
                            div.form-group
                                input#kid_female.form-control(type='checkbox', name='kid_female')
                                label(for="kid_female") Au moins une fille
                            div.form-group.material_input
                                input#min_age(type="number" val="" name="min_age" min="0")
                                label(for='min_age') âge minimum requis
                            div.form-group.material_input
                                input#max_age(type="number" val="" name="max_age" min="1")
                                label(for='max_age') âge maximum requis
                    div.form-group
                        input#has_geolocation.form-control(type='checkbox', name='has_geolocation')
                        label(for="has_geolocation")= app.locals.admin_lang[locale].keys['USERS_FILTERS_HAS_GEOLOCATION']
                    div.form-group.checkbox_relative_container(data-checkboxrelative="has_geolocation")
                        div.checkbox_relative
                            div.form-group.material_input
                                input#geolocation_address(type='text' name="geolocation_address")
                                label(for='geolocation_address') indiquez une adresse valide
                            div.form-group.material_input
                                input#geolocation_distance(type='number' name="geolocation_distance" min="4")
                                label(for='geolocation_distance') Indiqueez la distance de l'utilisateur requis
                    div.form-group
                        input#is_active.form-control(type='checkbox', name='is_active')
                        label(for="is_active")= app.locals.admin_lang[locale].keys['USERS_FILTERS_IS_ACTIVE']
                    div.form-group.checkbox_relative_container(data-checkboxrelative="is_active")
                        div.checkbox_relative
                            div.form-group.radio_list
                                input#one_week(type="radio" name="active" value="one_week")
                                label(for='one_week') 1 semaine
                            div.form-group.radio_list
                                input#two_weeks(type="radio" name="active" value="two_weeks")
                                label(for='two_weeks') 2 semaines
                            div.form-group.radio_list
                                input#three_weekd(type="radio" name="active" value="three_weekd")
                                label(for='three_weekd') 3 semaines
                            div.form-group.radio_list
                                input#one_month(type="radio" name="active" value="one_month")
                                label(for='one_month') 1 mois
                    div.form-group
                        input#has_fidelity.form-control(type='checkbox', name='has_fidelity')
                        label(for="has_fidelity")= app.locals.admin_lang[locale].keys['USERS_FILTERS_HAS_FIDELITY_CARD']
                    div.form-group
                        input#has_basket.form-control(type='checkbox', name='has_basket')
                        label(for="has_basket")= app.locals.admin_lang[locale].keys['USERS_FILTERS_HAS_BASKET']
                    div.form-group
                        input#has_orders.form-control(type='checkbox', name='has_orders')
                        label(for="has_orders")= app.locals.admin_lang[locale].keys['USERS_FILTERS_HAS_ORDERS']
                    div.form-group
                        input#has_return.form-control(type='checkbox', name='has_return')
                        label(for="has_return")= app.locals.admin_lang[locale].keys['USERS_FILTERS_HAS_FEEDBACK']
                    div.form-group
                        div.btn.btn-success= app.locals.admin_lang[locale].keys['USERS_APPLY_FILTERS_CTA']
        div#users.container
            h1= app.locals.admin_lang[locale].keys['USERS_TITLE']
            ul.users_list.col_options_list
              each user in users
                li(data-memberid=user._id)
                    div.infos
                      div.avatar
                        img(src=user.avatar+"" onerror="this.src='/images/assets/account.svg'")
                      div.first_name= user.pseudo 
                      div.birth_date= user.email
                    ul.options
                      li.primary(data-value=user._id, data-navigate="/admin/user/edit/"+user._id)
                        div.icon.icon-pencil.idkids-icons
                        div.label= app.locals.admin_lang[locale].keys['EDIT_CTA']
                      li.danger(data-farniente="delete" data-url="/api/users/"+user._id data-type="delete" data-id=user._id)
                        div.icon.icon-trash.idkids-icons
                        div.label= app.locals.admin_lang[locale].keys['DELETE_CTA']
            //-div.col-md-4
              h2= app.locals.admin_lang[locale].keys['USERS_GROUPS_TITLE']
              p= app.locals.admin_lang[locale].keys['USERS_GROUPS_MESSAGE']
              div.formular.fullscreen#users_groups
                  form
                      div.form-group.material_input
                          input#label.form-control(type='text', name='label')
                          label(for="label")= app.locals.admin_lang[locale].keys['USERS_GROUPS_NEW_LABEL']
                      div.form-group
                          div.btn.btn-success= app.locals.admin_lang[locale].keys['USERS_GROUPS_NEW_CTA']
            
            
